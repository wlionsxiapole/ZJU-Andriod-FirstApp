<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="55px"
        android:paddingRight="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/zju"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/zju" />

        <TextView
            android:id="@+id/test_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:text="ZJU Andriod FirstApp Test"
            android:textColor="#238745" />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:hint="请输入文字"
            android:gravity="center"
            android:imeOptions="actionSearch"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_get_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_get_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="取值"
            app:layout_constraintStart_toStartOf="@+id/edit_text"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="全选"
            app:layout_constraintBaseline_toBaselineOf="@+id/edit_text"
            app:layout_constraintStart_toStartOf="@+id/edit_text" />



        <Button
            android:id="@+id/btn_get_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="获取选中文本"
            app:layout_constraintBaseline_toBaselineOf="@+id/edit_text"
            app:layout_constraintStart_toStartOf="@+id/edit_text" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="开"
            android:textOff="关"
            android:layout_gravity="center"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>